  <xs:element name="plant" type="plantType">
    <xs:annotation><xs:documentation>PACE plant definition</xs:documentation></xs:annotation>
  </xs:element>

  <xs:complexType name="plantType">
    <xs:attribute name="number" use="required" type="plantNumberType"/>
  </xs:complexType>

  <xs:simpleType name="plantNumberType">
    <xs:restriction base="xs:string">
      <xs:annotation>
        <xs:documentation xml:lang="de">Erlaubt sind Werte von 0000 bis 9999. Verwendet werden sollten nur FAB Werkskennziffern.</xs:documentation>
        <xs:documentation xml:lang="en">Allowed are values from 0000 to 9999. Only FAB plant numbers should be used.</xs:documentation>
      </xs:annotation>
      <xs:pattern value="[0-9]{4}"/>
    </xs:restriction>
  </xs:simpleType>
</xs:schema>
